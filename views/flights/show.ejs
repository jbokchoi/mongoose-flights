<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Flights</title>
    <link rel='stylesheet' href='/stylesheets/show.css' />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">
</head>
<body>
    <h2> Flight No. <%= flight.flightNo %> Details</h2>
    <nav>
        <button onclick="location.href='/flights'">View All Flights <i class="fas fa-plane"></i></button>
        <button class="new-flight" onclick="location.href='/flights/new'"> Add New Flight <i class="fas fa-plane-departure"></i> </button>
        <button class="new-ticket" onclick="location.href='/flights/<%= flight._id %>/tickets/new'"> Add New Ticket <i class="fas fa-ticket-alt"></i>

        </button>
    </nav>
    <table id="show-details">
        <tr>
            <th id="header" colspan="2">Departure Details</th>
        </tr>
        <tr>
            <th>Departure Airport:</th>
            <td><%= flight.airport %></td>
        </tr>
        <tr>
            <th>Airline:</th>
            <td><%= flight.airline %></td>
        </tr>
        <tr>
            <th>Flight Number:</th>
            <td><%= flight.flightNo %></td>
        </tr>
        <tr>
            <th>Departs:</th>
            <td><%= flight.departs %></td>
        </tr>
    </table>

    <table id="tickets">
        <thead>
            <tr>
                <th id="header" colspan="3">Flight Details</th>
            </tr>
            <tr>
                <th>Seat No.</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
        <% flight.tickets.forEach(function(ticket) { %>
            <tr>
                <td><%= ticket.seat %></td>
                <td><%= ticket.price %></td>
            </tr>
        <% }); %>
        </tbody>
    </table>

    <% if (flight.destination.length) { %>
        <table id ="show-destination">
            <% flight.destination.forEach(function(des) { %>
        <tr>
            <th id="header" colspan="2">Destination Details</th>
        </tr>
        <tr>
            <th>Arrival Airport:</th>
            <td><%= des.airport %></td>
        </tr>
        <tr>
            <th>Arrival:</th>
            <td><%= des.arrival %></td>
        </tr>
            <% }); %>
        </table>
    <% } else { %>
        <h5>No Destination Details Added Yet</h5>
    <% } %>

    <form id="add-destination" method="POST" 
        action="/flights/<%= flight._id %>/destinations">
        <h3 id="add-des-details">Add Destination Details</h2>
        <label id="arrival">Arrival Airport:</label>
        <select id="airport" name="airport">
            <option value="AUS">AUS</option>
            <option value="DAL">DAL</option>
            <option value="LAX">LAX</option>
            <option value="SEA">SEA</option>
        </select>       
        <label id="arr-date">Arrival Date and Time:</label>
        <input id="date" type="datetime-local" name="arrival">
        <input type="submit" class="add" value="Add Details">
    </form>    

</body>
</html>